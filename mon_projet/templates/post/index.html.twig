{# templates/post/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des posts{% endblock %}

{% block body %}
<h1>Liste des posts</h1>

<ul>
    {% for post in posts %}
        <li>
            <h3>{{ post.titre }}</h3>
            <p>{{ post.description }}</p>
            <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="Image du post" width="200">
        </li>
    {% endfor %}
</ul>

<a href="{{ path('post_new') }}">Cr√©er un nouveau post</a>

{% endblock %}
