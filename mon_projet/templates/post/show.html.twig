{% extends 'base.html.twig' %}

{% block body %}
    <h1>Posts</h1>
    <div>
        {% for post in posts %}
            <div>
                <h2>{{ post.titre }}</h2>
                <p>{{ post.description }}</p>
                <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="{{ post.titre }}" width="200">
                <small>Posté par {{ post.user }}</small>
            </div>
        {% else %}
            <p>Aucun post disponible.</p>
        {% endfor %}
    </div>

    <button id="load-more">Charger plus</button>

    <!-- Modale pour choisir l'image et ajouter un titre/description -->
    <div id="image-modal" style="display:none;">
        <h3>Choisir une image et ajouter un titre/description</h3>
        <div id="image-gallery">
            {% for image in images %}
                <div class="image-item">
                    <img src="{{ asset('uploads/images/' ~ image) }}" alt="Image {{ loop.index }}" width="100" onclick="selectImage('{{ image }}')">
                </div>
            {% endfor %}
        </div>
        <form id="post-form" action="{{ path('app_create_post') }}" method="POST">
            <input type="hidden" id="selected-image" name="image" value="">
            <div>
                <label for="titre">Titre</label>
                <input type="text" id="titre" name="titre" required>
            </div>
            <div>
                <label for="description">Description</label>
                <textarea id="description" name="description" required></textarea>
            </div>
            <button type="submit">Ajouter le post</button>
        </form>
    </div>

    <script>
        document.getElementById('load-more').addEventListener('click', function() {
            let offset = document.querySelectorAll('div > div').length;
            fetch('/posts/load/' + offset)
                .then(response => response.json())
                .then(posts => {
                    let container = document.querySelector('div');
                    posts.forEach(post => {
                        let div = document.createElement('div');
                        div.innerHTML = `<h2>${post.titre}</h2><p>${post.description}</p><small>Posté par ${post.user}</small>`;
                        container.appendChild(div);
                    });

                    // Afficher la modale après avoir chargé plus de posts
                    document.getElementById('image-modal').style.display = 'block';
                });
        });

        // Sélectionner une image pour le post
        function selectImage(image) {
            document.getElementById('selected-image').value = image;
            // Vous pouvez aussi afficher un aperçu de l'image choisie si nécessaire
            alert('Image sélectionnée : ' + image);
        }
    </script>
{% endblock %}


