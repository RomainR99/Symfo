{# templates/base.html.twig #}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mon Projet Symfony{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('styles.css') }}">
</head>
<body>

    {# Header commun à toutes les pages #}
    <header class="bg-primary text-white text-center py-3">
        <h1>Mon Projet Symfony</h1>
    </header>

    {# Navigation (Menu) commun à toutes les pages #}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="{{ path('post_new') }}">Créer un post</a>
            <a class="navbar-brand" href="{{ path('posts_list') }}">Liste des posts</a>
        </div>
    </nav>

    {# Le contenu spécifique à chaque page sera rendu ici #}
    <div class="container mt-5">
        {% block body %}{% endblock %}
    </div>

    {# Footer (facultatif) #}
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p>&copy; 2025 Mon Projet Symfony</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
